<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    android:background="@drawable/top_round_gray_10"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/white_87"
        android:fontFamily="@font/lato_bold"
        android:text="Add Task"/>

    <EditText
        android:hint="Do math homework"
        android:paddingHorizontal="16dp"
        android:textColorHint="@color/white_gray"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:background="@drawable/outlined_rounded_white_gray_4"
        android:layout_height="43dp"/>

    <EditText
        android:hint="Description"
        android:paddingHorizontal="16dp"
        android:textColorHint="@color/white_gray"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="@drawable/outlined_rounded_white_gray_4"
        android:layout_height="43dp"/>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_timer"
            android:id="@+id/taskAddTime"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

        <ImageView
            android:layout_marginStart="30dp"
            android:src="@drawable/ic_flag"
            android:layout_toEndOf="@id/taskAddTime"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

        <ImageView
            android:layout_width="24dp"
            android:src="@drawable/ic_send"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>